<project>

    <target name="clean">
        <delete dir="bin"/>
    </target>

    <target name="compile">
        <mkdir dir="bin/classes"/>
        <javac srcdir="src" destdir="bin/classes"/>
    </target>

    <target name="jar">
        <mkdir dir="bin/jar"/>
        <jar destfile="bin/jar/pavenger.jar" basedir="bin/classes">
            <manifest>
                <attribute name="Main-Class" value="pavenger"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="bin/jar/pavenger.jar" fork="true"/>
    </target>

    <target name="test">
	<echo message = "This part should be updated later."/>
    </target>
</project>
